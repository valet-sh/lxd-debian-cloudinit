user www-data;
worker_processes auto;
pid /run/nginx.pid;

events {
    worker_connections 768;
}

http {
    sendfile on;

    tcp_nopush on;
    tcp_nodelay on;

    keepalive_timeout 65;
    types_hash_max_size 2048;
    server_tokens off;

    client_max_body_size 128M;

    include /etc/nginx/mime.types;
    default_type application/octet-stream;

    {% if (letsencrypt_dryrun is not defined or not letsencrypt_dryrun|bool) %}
        ssl_certificate /etc/letsencrypt/live/{{ valet_lxd_repository_domain }}/fullchain.pem;
        ssl_certificate_key /etc/letsencrypt/live/{{ valet_lxd_repository_domain }}/privkey.pem;
    {% else %}
        ssl_certificate /etc/ssl/certs/ssl-cert-snakeoil.pem;
        ssl_certificate_key /etc/ssl/private/ssl-cert-snakeoil.key;
    {% endif %}

    ssl_session_cache  shared:SSL:10m;
    ssl_session_timeout  5m;
    ssl_protocols TLSv1.1 TLSv1.2;
    ssl_ciphers "EECDH+AESGCM:EDH+AESGCM:AES256+EECDH:AES256+EDH";
    ssl_ecdh_curve secp384r1;
    ssl_session_cache shared:SSL:10m;
    ssl_session_tickets off;
    ssl_prefer_server_ciphers on;
    ssl_stapling on;
    ssl_dhparam {{ nginx_dhparams_file }};

    access_log /var/log/nginx/access.log;
    error_log /var/log/nginx/error.log;

    gzip on;
    gzip_disable "msie6";
    gzip_vary on;
    gzip_comp_level 8;
    gzip_min_length  1100;
    gzip_buffers 16 8k;
    gzip_proxied any;
    gzip_http_version 1.1;
    gzip_types  text/plain
                application/xml
                text/css
                text/js
                text/xml
                application/x-javascript
                text/javascript
                application/json
                application/xml+rss
                image/svg+xml
                application/javascript;

    autoindex on;

    include /etc/nginx/conf.d/*.conf;
}
